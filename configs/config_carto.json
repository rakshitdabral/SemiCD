{
    "name": "SemiCD-Cartosat",
    "experim_name": "SemiCD_Cartosat_semi_5",
    "sup_percent": 100,
    "unsup_percent": 100,
    "n_total_lbl": 245,
    "n_gpu": 1,
    "diff_lrs": true,
    "ramp_up": 0.1,
    "unsupervised_w": 20,
    "lr_scheduler": "Poly",
    "use_weak_lables": true,
    "weakly_loss_w": 0.2,
    "pretrained": true,

    "model": {
        "supervised": false,
        "semi": true,
        "supervised_w": 1,
        "sup_loss": "FL",
        "un_loss": "MSE",
        "softmax_temp": 1,
        "aux_constraint": true,
        "aux_constraint_w": 1,
        "confidence_masking": true,
        "confidence_th": 0.9,
        "drop": 5,
        "drop_rate": 0.5,
        "spatial": true,
        "cutout": 4,
        "erase": 0.3,
        "vat": 2,
        "xi": 1e-6,
        "eps": 2.0,
        "context_masking": 2,
        "object_masking": 2,
        "feature_drop": 5,
        "feature_noise": 5,
        "uniform_range": 0.3
    },

    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 1e-3,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "train_supervised": {
        "data_dir": "./cartosat",
        "batch_size": 32,
        "crop_size": 256,
        "shuffle": true,
        "base_size": 256,
        "scale": true,
        "augment": true,
        "flip": true,
        "rotate": true,
        "blur": true,
        "split": "train_supervised",
        "num_workers": 2
    },

    "train_unsupervised": {
        "data_dir": "./cartosat",
        "weak_labels_output": "pseudo_labels",
        "batch_size": 32,
        "crop_size": 256,
        "shuffle": true,
        "base_size": 256,
        "scale": true,
        "augment": true,
        "flip": true,
        "rotate": true,
        "blur": true,
        "split": "train_unsupervised",
        "num_workers": 2
    },

    "val_loader": {
        "data_dir": "./cartosat",
        "batch_size": 1,
        "val": true,
        "split": "val",
        "shuffle": false,
        "num_workers": 1
    },

    "trainer": {
        "epochs": 500,
        "save_dir": "./saved/Cartosat",
        "save_period": 5,
        "monitor": "max Mean_IoU",
        "early_stop": 25,
        "tensorboardX": true,
        "log_dir": "./saved/Cartosat",
        "log_per_iter": 20,
        "val": true,
        "val_per_epochs": 5
    }
}